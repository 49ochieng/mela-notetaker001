# Environment Configuration Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to GitHub - it's in .gitignore

# =====================================
# Azure Speech Services (Audio Transcription)
# =====================================

# For meeting audio transcription and voice recognition
# Get from: Azure Portal → Speech Services → Keys and Endpoint
AZURE_SPEECH_KEY=

# Region where Speech Services resource is deployed
# e.g., eastus, westus, southcentralus, etc.
AZURE_SPEECH_REGION=

# Optional: Transcription language code (default: en-US)
# Examples: en-US, fr-FR, es-ES, de-DE, ja-JP, zh-CN
AUDIO_TRANSCRIPTION_LANGUAGE=en-US

# =====================================
# Meeting Configuration
# =====================================

# Enable bot to join meetings
BOT_JOIN_MEETINGS=true

# Enable real-time meeting transcription
MEETING_REAL_TIME_TRANSCRIPTION=true

# Auto-detect language in meeting audio
AUDIO_AUTO_DETECT_LANGUAGE=false

# Enable speaker diarization (identify different speakers)
AUDIO_SPEAKER_DIARIZATION=true

# =====================================
# Graph API / Azure AD Configuration
# =====================================

# Your Azure AD Application (Client) ID
# Get from: Azure Portal → App registrations → your app → Application ID
AAD_APP_CLIENT_ID=

# Your Azure AD Client Secret
# Get from: Azure Portal → App registrations → your app → Certificates & secrets → New secret
# ⚠️ IMPORTANT: This shows only once! Copy it immediately after creation
SECRET_AAD_APP_CLIENT_SECRET=

# Your Azure AD Tenant ID
# Get from: Azure Portal → Azure Active Directory → Tenant ID
AAD_APP_TENANT_ID=

# Optional: Override default bot email address
# Default: bot@company.onmicrosoft.com
BOT_EMAIL=

# =====================================
# Application Configuration
# =====================================

# Bot type: UserAssignedMsi (Azure) or DevTools (Local)
BOT_TYPE=DevTools

# Client ID for Teams bot
CLIENT_ID=

# =====================================
# Database Configuration
# =====================================

# Database type: sqlite (local) or mssql (Azure)
RUNNING_ON_AZURE=0

# For SQLite (local development)
# Path where conversations database will be stored
CONVERSATIONS_DB_PATH=src/storage/conversations.db

# For MSSQL (Azure deployment)
# Connection string for Azure SQL Database
SQL_CONNECTION_STRING=

# Or individual SQL parameters:
SQL_SERVER=
SQL_DATABASE=
SQL_USERNAME=
SQL_PASSWORD=

# =====================================
# Azure OpenAI Configuration
# =====================================

# Azure OpenAI API Key
AZURE_OPENAI_KEY=

# Azure OpenAI Endpoint
# Format: https://<resource-name>.openai.azure.com/
AZURE_OPENAI_ENDPOINT=

# Deployment name for your chat model
# (e.g., gpt-4, gpt-35-turbo, etc.)
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4.1

# API version
AZURE_OPENAI_API_VERSION=2024-05-01-preview

# =====================================
# Teams Bot Configuration
# =====================================

# Your Teams app ID
TEAMS_APP_ID=

# Bot endpoint for local development
BOT_ENDPOINT=

# Bot domain for local development
BOT_DOMAIN=

# =====================================
# Debugging & Logging
# =====================================

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# =====================================
# Notes
# =====================================

# 1. NEVER commit this file to Git (use .env.example instead)
# 2. Regenerate CLIENT_SECRET every 6 months for security
# 3. Use separate app registrations for dev/staging/prod
# 4. For local development, use DevTools plugin
# 5. For Azure deployment, use UserAssignedMsi with Key Vault
